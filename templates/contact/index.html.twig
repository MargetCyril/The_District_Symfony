{% extends 'base.html.twig' %}

{% block title %}
	{{titre}}
{% endblock %}

{% block body %}
	<div class="corps">
		<br>
		<div class="row text-center">

			{{ form_start(form)}}

			<div class="col-12">
				{{form_label(form.nom)}}
			</div>
			<div class="col-12">
				{{form_widget(form.nom)}}
			</div>
			<div class="col-12">
				{{form_label(form.email)}}
			</div>
            <div class="col-12">
				{{form_widget(form.email)}}
			</div>
			<div class="col-12">
				{{form_label(form.object)}}
			</div>
            <div class="col-12">
				{{form_widget(form.object)}}
			</div>
			<div class="col-12">
				{{form_label(form.message)}}
			</div>
            <div class="col-12">
				{{form_widget(form.message)}}
			</div>
			{{form_end(form)}}
		</div>

		<br>
	</div>
{% endblock %}
